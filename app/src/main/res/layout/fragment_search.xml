<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchFragment"
    >

    <Spinner
        android:id="@+id/spinner_cities"
        android:layout_width="90dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintHorizontal_bias="0.1"
        >
    </Spinner>
    <Button
        android:id="@+id/buttom_createevent"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/green_button"
        app:layout_constraintStart_toEndOf="@id/searchView_events"
        app:layout_constraintTop_toTopOf="@id/searchView_events"
        android:text="@string/create"
        android:textAllCaps="false"
        >
    </Button>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView_events"
        android:layout_width="160dp"
        android:layout_height="35dp"

        android:layout_marginTop="20dp"
        android:background = "@drawable/rounded_edittext"
        >
    </androidx.appcompat.widget.SearchView>
    <ImageButton
        android:id="@+id/buttom_filters"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="@+id/searchView_events"
        android:layout_marginLeft="8dp"
        app:layout_constraintEnd_toEndOf="@id/buttom_createevent"
        >

    </ImageButton>
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_of_buttoms"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/spinner_cities"
        app:layout_constraintTop_toBottomOf="@id/spinner_cities"
        android:layout_marginTop="20dp"
        app:flow_horizontalStyle="spread_inside"
        app:constraint_referenced_ids="searchView_events, buttom_createevent, buttom_filters"
        >

    </androidx.constraintlayout.helper.widget.Flow>

</androidx.constraintlayout.widget.ConstraintLayout>